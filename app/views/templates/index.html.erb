<div id="main" data-ng-controller="HomeCtrl">
  <div class="center" ng-hide="submitted">
    <div class='spacer'><div class='truck'></div></div>
    <br />

    <div class="row">
      <div class="col-sm-3"></div>
      <div id="location" class="col-sm-6">
        <button class="btn btn-success" ng-click="locate()"><i class="fa fa-location-arrow"></i> Use my location</button>
        <hr class="soften" />
        <span class="text-white center">- OR ENTER YOUR ADDRESS-</span>
        <br>
        <br>
        <input class="form-control enter__adresss" type="text" placeholder="1234 Main Street"></input>
      </div>
      <div class="col-sm-3"></div>
    </div>

    <br />

    <div class="row">
      <div class="col-sm-3"></div>
      <div class="col-sm-6">
        <button class="submit submit__address btn btn-primary" ng-click="submit()">ENTER</button>
      </div>
      <div class="col-sm-3"></div>
    </div>
  </div>
  <div ng-show="submitted">
    <div class="row" id="map-overlay">
      <div style="display: table; width: 100%;">
        <div style="display: table-cell; width: 50%; padding-left: 30px;">
          <button class="btn btn-default" ng-click="submitted = false">Back</button>
        </div>
        <div style="display: table-cell; width: 50%; padding-right: 30px;" class="right">
          <button class="btn btn-primary" ng-click="finish()">Save</button>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-3"></div>
      <div class="col-sm-6">
        <div id="map-canvas" />
      </div>
      <div class="col-sm-3"></div>
    </div>
  </div>
</div>

