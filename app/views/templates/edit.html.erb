    </div>
  </div>

  <div class="row">
    <div class="col-sm-8 col-sm-offset-2 waste-category yard" ng-click="toggle('yard')">
     <span class='cat__name'>Yard Waste</span>
     <span class="fa fa-fw {{ active('yard') ? 'fa-check-circle-o' : 'fa-circle-o' }} pull-right"></span>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-8 col-sm-offset-2 waste-category hazard" ng-click="toggle('hazard')">
     <span class='cat__name'>Hazardous Materials</span>
     <span class="fa fa-fw {{ active('hazard') ? 'fa-check-circle-o' : 'fa-circle-o' }} pull-right"></span>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-8 col-sm-offset-2 waste-category garbage" ng-click="toggle('dropoff')">
     <span class='cat__name'>Large items & drop-off</span>
     <span class="fa fa-fw {{ active('dropoff') ? 'fa-check-circle-o' : 'fa-circle-o' }} pull-right"></span>
    </div>
  </div>

