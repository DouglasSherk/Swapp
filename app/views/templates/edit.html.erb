<div id="main" data-ng-controller="PickupsCtrl">
  <div class="row">
    <h4 class="col-sm-8 col-sm-offset-2 text-center category__header">Notifications</h3>
  </div>

  <div class="row">
    <div class="col-sm-8 col-sm-offset-2 waste-category garbage" ng-click="toggle('garbage')">
     <span class='cat__name'>Garbage</span>
     <span class="fa fa-fw {{ active('garbage') ? 'fa-check-circle-o' : 'fa-circle-o' }} pull-right"></span>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-8 col-sm-offset-2 waste-category recycle" ng-click="toggle('recycle')">
