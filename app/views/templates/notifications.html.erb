<div id="main" class="container notifications" data-ng-controller="NotificationsCtrl">
  <div class="row">
    <h3 class="col-sm-8 col-sm-offset-2">Notifications {{ unread > 0 ? '(' + unread + " new)" : "" }}</h3>
  </div>

  <br />

  <div class="row" ng-repeat="note in notifications">
    <div class="col-sm-8 col-sm-offset-2 waste-category notification{{ !note.read ? '-new' : '' }}" ng-click="markRead()">
      <div class='cat__date'>{{ note.time | date:"h:mm a - d MMM yy" }}</div>
      <div class='cat__not col-xs-11'>{{ note.message }}</div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-8 col-sm-offset-2 waste-category notification" click-href="https://twitter.com/stratfordrrr">
      <div class='cat__date'>8:08 am - 13 Nov 13</div>
      <div class='cat__not col-xs-11'>Leaf and Yard waste collection will be extended for 1 week! Collection will be on your normally scheduled garbage day Nov 18-22 city wide.</div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-8 col-sm-offset-2 waste-category notification" click-href="https://twitter.com/stratfordrrr">
      <div class='cat__date'>7:08 am - 8 Nov 13</div>
      <div class='cat__not'>Landfill open Monday November 11, 2013 from 9am-12pm in recognition of Remembrance Day. Collection  schedule is unchanged.</div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-8 col-sm-offset-2 waste-category notification" ng-click="clear()">
      <div class='cat__date'>6:00 am - 7 Nov 13</div>
      <div class='cat__not'>Final Leaf and Yard waste collection, November 11-15 on your collection day!  Leaf and Yard waste can be dropped off free at the landfill.</div>
    </div>
  </div>
</div>
